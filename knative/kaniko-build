apiVersion: v1
kind: Secret
metadata:
  name: dockerhub-account
  annotations:
    build.knative.dev/docker-0: https://index.docker.io/v1/
type: kubernetes.io/basic-auth
data:
  # 'echo -n "username" | base64'
  username: dXNlcm5hbWUK
  # 'echo -n "password" | base64'
  password: cGFzc3dvcmQK

apiVersion: v1
kind: ServiceAccount
metadata:
  name: build-bot
secrets:
- name: dockerhub-account

# https://github.com/knative/docs/blob/master/docs/build/build-templates.md
apiVersion: serving.knative.dev/v1alpha1
kind: Service
metadata:
  name: acloud-simple-ui
  namespace: default
spec:
  runLatest:
    configuration:
      build:
        serviceAccountName: build-bot
        source:
          git:
            url: https://github.com/masenmiao/acloud-istio-example.git
            revision: master
         template:
           name: kaniko
           arguments:
           - name: IMAGE
           # value: docker.io/gswk/knative-build-demo:latest
             value: registry.cn-shenzhen.aliyuncs.com/acloud/acloud-simple-ui:latest
           # Optional override to specify the subdirectory containing the Dockerfile
           - name: DIRECTORY
             value: /workspace/acloud-simple-ui
      revisionTemplate:
        spec:
          container:
            image: docker.io/gswk/knative-build-demo:latest